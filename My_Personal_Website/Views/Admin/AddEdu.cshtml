                @Html.ValidationMessageFor(model => model.Degree_Fr)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Major, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Major, new { @class = "form-control", placeholder = Resource.English })
