            <div class="col-md-10">
                @Html.TextBoxFor(model => model.University, new { @class = "form-control", placeholder = Resource.English })
                @Html.ValidationMessageFor(model => model.University)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.University, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.University_Fr, new { @class = "form-control", placeholder = Resource.French })
                @Html.ValidationMessageFor(model => model.University_Fr)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UniversityWebsite, new { @class = "control-label col-md-2" })
