@model My_Personal_Website.Models.MessageModel
@using My_Personal_Website.Resources
@{
    ViewBag.Title = Resource.ViewMsg;
}

<h2>
    <span class="glyphicon glyphicon-eye-open"></span>
    @Resource.ViewMsg
</h2>
<hr />

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-info">
            <div class="panel-heading text-center">
                <h4 class="text-info">
                    <span class="glyphicon glyphicon-list-alt"></span>
                    @Resource.MsgDetails
                </h4>
            </div>
            <div class="panel-body">
                <p>
                    @Html.DisplayNameFor(m => m.Email) : @Model.Email
                </p>
                <p>
                    @Html.DisplayNameFor(m => m.DT) : @Model.DT
                </p>
                <p>
                    @Html.DisplayNameFor(m => m.Subject) : @Model.Subject
                </p>
               
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-success">
            <div class="panel-heading text-center">
                <h4 class="text-success">
                    <span class="glyphicon glyphicon-list-alt"></span>
                    @Resource.MsgText
                </h4>
            </div>
            <div class="panel-body">
                <textarea class="messageTextArea" readonly="readonly" style="text-align:justify">
                    @Model.Msg
                </textarea>
            </div>
        </div>
    </div>

</div>


<div>
    @Html.ActionLink(Resource.BackToList, "Messages")
</div>


