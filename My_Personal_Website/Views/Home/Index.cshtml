    ViewBag.Title = Resource.Home;
    int eduCnt = 0;
    int profCnt = 0;
    int refCnt = 0;
    int langCnt = 0;
    int crsCnt = 0;
    int sklCnt = 0;
    string spkColor = "", lstColor = "", rdColor = "", wrColor = "", lblColor = "";
    string clsName = "";
