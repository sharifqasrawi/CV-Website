@model My_Personal_Website.Models.HomeModel
@using My_Personal_Website.Models
@using My_Personal_Website.Resources
@using My_Personal_Website.WebsiteLanguages
@{
    int eduCnt = 0;
    int profCnt = 0;
    int refCnt = 0;
    int langCnt = 0;
    int crsCnt = 0;
    int sklCnt = 0;
    string spkColor = "", lstColor = "", rdColor = "", wrColor = "", lblColor = "";
    string clsName = "";
    List<string> panels = new List<string>();
    panels.Add("panel-primary");
    panels.Add("panel-info");
    panels.Add("panel-default");
    panels.Add("panel-warning");
    panels.Add("panel-danger");

}


<div id="skl" class="ContentStyle">

    @foreach (CVSkillsModel e in Model.Skills)
    {

        sklCnt++;
        clsName = e.SkillType;
        <div class="panel panel-info @e.SkillType">
            <div class="panel-heading" style="font-weight:bold;">
                @sklCnt-
                @switch (SiteLanguages.GetCurrentLanguageCulture())
                {
                    case "en-US":
                        @:@e.SkillName
                        break;
                    case "fr-FR":
                    @:@e.SkillName_Fr
                        break;
                    default:
                    @:@e.SkillName
                        break;
                }
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-3">
                        <dl>
                            <dt>
                                @Resource.Type:
                            </dt>
                            <dd>
                                @switch (SiteLanguages.GetCurrentLanguageCulture())
                                {
                                    case "en-US":
                                        @:@e.SkillType
                        break;
                                    case "fr-FR":
                                    @:@e.SkillType_Fr
                        break;
                                    default:
                                    @:@e.SkillType
                        break;
                                }
                            </dd>
                        </dl>
                    </div>
                    <div class="col-lg-6">
                        <dl>
                            <dt>
                                @Resource.Description
                            </dt>
                            <dd>
                                @switch (SiteLanguages.GetCurrentLanguageCulture())
                                {
                                    case "en-US":
                                        @:@e.Desc
                        break;
                                    case "fr-FR":
                                    @:@e.Desc_Fr
                        break;
                                    default:
                                    @:@e.Desc
                        break;
                                }
                            </dd>
                        </dl>
                    </div>
                    <div class="col-lg-3">
                        <dl>
                            <dt>
                                @Resource.Level:
                            </dt>
                            <dd>
                                @{
        if (e.Level >= 80)
        {
            lblColor = "progress-bar-success";
        }
        else if (e.Level >= 50 && e.Level < 80)
        {
            lblColor = "progress-bar-info";
        }
        else if (e.Level >= 20 && e.Level < 50)
        {
            lblColor = "progress-bar-warning";
        }
        else if (e.Level >= 0 && e.Level < 20)
        {
            lblColor = "progress-bar-danger";
        }
                                }
                                <div class="progress">
                                    <div class="progress-bar progress-bar-striped active @lblColor" role="progressbar" aria-valuenow="@e.Level"
                                         aria-valuemin="0" aria-valuemax="100" style="width:@e.Level%">
                                        @e.Level %
                                    </div>
                                </div>
                            </dd>

                        </dl>
                    </div>

                </div>
            </div>
        </div>


    }
</div>
