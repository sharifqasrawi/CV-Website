@model My_Personal_Website.Models.HomeModel
@using My_Personal_Website.Models
@using My_Personal_Website.Resources
@using My_Personal_Website.WebsiteLanguages
@{
    int eduCnt = 0;
    int profCnt = 0;
    int refCnt = 0;
    int langCnt = 0;
    int crsCnt = 0;
    int sklCnt = 0;
    string spkColor = "", lstColor = "", rdColor = "", wrColor = "", lblColor = "";
    string clsName = "";
    List<string> panels = new List<string>();
    panels.Add("panel-primary");
    panels.Add("panel-info");
    panels.Add("panel-default");
    panels.Add("panel-warning");
    panels.Add("panel-danger");

}

<div class="ContentStyle">
    @foreach (CVProfModel e in Model.Profs)
    {

        profCnt++;

        <div class="panel @panels[profCnt-1].ToString()">
            <div class="panel-heading" style="font-weight:bold;">
                @profCnt- @e.Position
            </div>
            <div class="panel-body">

                <div class="row">
                    <div class="col-lg-4">
                        <dl>
                            <dt>
                                @Resource.Company:
                            </dt>
                            <dd>
                                @switch (SiteLanguages.GetCurrentLanguageCulture())
                                {
                                    case "en-US":
                                        @:@e.Company
                        break;
                                    case "fr-FR":
                                    @:@e.Company_Fr
                        break;
                                    default:
                                    @:@e.Company
                        break;
                                }

                            </dd>
                            <dd>
                                <a href="@e.CompanyWebsite" target="_blank"> @e.CompanyWebsite </a>
                            </dd>
                        </dl>
                    </div>
                    <div class="col-lg-4">
                        <dl>
                            <dt>
                                @Resource.JobDesc:
                            </dt>
                            <dd>
                                @switch (SiteLanguages.GetCurrentLanguageCulture())
                                {
                                    case "en-US":
                                        @:@e.Desc
                        break;
                                    case "fr-FR":
                                    @:@e.Desc_Fr
                        break;
                                    default:
                                    @:@e.Desc
                        break;
                                }
                            </dd>

                        </dl>
                    </div>
                    <div class="col-lg-4">
                        <dl>
                            <dt>
                                @Resource.Country:
                            </dt>
                            <dd>
                                @switch (SiteLanguages.GetCurrentLanguageCulture())
                                {
                                    case "en-US":
                                        @:@e.Country
                        break;
                                    case "fr-FR":
                                    @:@e.Country_Fr
                        break;
                                    default:
                                    @:@e.Country
                        break;
                                }

                            </dd>
                            <dt>
                                @Resource.City:
                            </dt>
                            <dd>
                                @switch (SiteLanguages.GetCurrentLanguageCulture())
                                {
                                    case "en-US":
                                        @:@e.City
                        break;
                                    case "fr-FR":
                                    @:@e.City_Fr
                        break;
                                    default:
                                    @:@e.City
                        break;
                                }
                            </dd>
                        </dl>
                    </div>

                </div>
                <div class="row">
                    <div class="col-lg-4">
                        <dl>
                            <dt>
                                @Resource.StartDate:
                            </dt>
                            <dd>
                                @e.DateStart.ToShortDateString()
                            </dd>
                            <dt>
                                @Resource.FinishDate:
                            </dt>
                            <dd>
                                @e.FinishDate.ToShortDateString()
                            </dd>
                        </dl>
                    </div>
                    <div class="col-lg-4">
                        <dl>
                            <dt>
                                @Resource.References:
                            </dt>
                            <dd>
                                <dl>
                                    @foreach (ProfRefs r in e.Refs)
                                    {
                                        refCnt++;
                                        <dt>
                                            @refCnt- @Resource.Name:
                                        </dt>
                                        <dd>
                                            @r.RefName
                                        </dd>
                                        <dt>
                                            @Resource.Relation:
                                        </dt>
                                        <dd>
                                            @switch (SiteLanguages.GetCurrentLanguageCulture())
                                            {
                                                case "en-US":
                                                    @:@r.RefRelation
                        break;
                                                case "fr-FR":
                                                @:@r.RefRelation_Fr
                        break;
                                                default:
                                                @:@r.RefRelation
                        break;
                                            }

                                        </dd>
                                        <dt>
                                            @Resource.Email:
                                        </dt>
                                        <dd>
                                            <a href="mailto: @r.RefEmail"> @r.RefEmail</a>
                                        </dd>
                                        <dt>
                                            @Resource.PhoneNum:
                                        </dt>
                                        <dd>
                                            @r.RefPhone
                                        </dd>
                                        <hr />
                                    }
                                </dl>
                            </dd>
                        </dl>
                    </div>
                    <div class="col-lg-4">

                        <br />
                        <a href="@Url.Content(e.ImgPath)" target="_blank"
                           class="btn btn-sm btn-default" download>
                            @Resource.ShowCertificate
                        </a>
                    </div>
                </div>
            </div>

        </div>


    }
</div>
